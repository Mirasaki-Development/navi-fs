{
  "version": "1.1.2",
  "name": "remote-file-access-api",
  "description": "Allows remote access to files and directories through a simple configuration file. Minimal set-up, maximum configuration and extendibility.",
  "main": "dist/src/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "clean:full": "npm run clean; rimraf node_modules",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts && npx eslint --fix test/**/*.ts",
    "prebuild": "npm run clean:dist",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/src/index",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "pretest": "npm run build",
    "test": "mocha dist/test/**/*.js",
    "test:dev": "ts-mocha test/**/*.spec.ts -w --watch-files '**/*.ts'",
    "typecheck": "tsc --noEmit",
    "commit": "cz"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/archiver": "^6.0.3",
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^5.2.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "chai": "^5.2.0",
    "eslint": "^9.24.0",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "body-parser": "^2.2.0",
    "cls-rtracer": "^2.6.3",
    "compression": "^1.8.0",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "rate-limiter-flexible": "^7.0.0",
    "zod": "^3.24.2"
  }
}
